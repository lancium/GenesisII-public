<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="gen.notification-consumer" name="notification-consumer.build">

	<condition property="gen.notification-consumer.uptodate">
		<and>
			<common.source.files.uptodate
				targetfile="${codegen-dir}/wsdl/notification-consumer.flag"/>
			<uptodate targetfile="${codegen-dir}/wsdl/notification-consumer.flag">
				<srcfiles dir="${wsdl-dir}">
					<include name="notification.xsd"/>
					<include name="notification.wsdl"/>
				</srcfiles>
			</uptodate>
		</and>
	</condition>

	<target name="gen.notification-consumer" unless="gen.notification-consumer.uptodate">
		<copy todir="${codegen-dir}/wsdl">
			<fileset refid="common.source.files"/>
			<fileset dir="${wsdl-dir}">
				<include name="notification.wsdl"/>
				<include name="notification.xsd"/>
			</fileset>
		</copy>

		<echo message="Generating Service wsdl."/>
		<genii-service-generator
			source="${codegen-dir}/wsdl/notification.wsdl"
			target="${codegen-dir}/wsdl/notification-consumer-service.wsdl"
			portType="{http://vcgr.cs.virginia.edu/genii/2006/12/notification}GeniiNotificationConsumerPortType"/>

		<antcall target="gen.stub-generation">
			<param name="stub.gen.target-dir" value="${codegen-dir}/notification-consumer"/>
			<param name="stub.gen.source-wsdl"
				value="file:///${codegen-dir}/wsdl/notification-consumer-service.wsdl"/>
			<param name="stub.gen.target-flag-file"
				value="${codegen-dir}/wsdl/notification-consumer.flag"/>
		</antcall>
	</target>

</project>

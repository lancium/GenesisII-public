<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="gen.simple-resolver" name="simple-resolver.build">

	<presetdef name="simple-resolver.source.files.uptodate">
		<uptodate targetfile="${flag.name}">
			<srcfiles dir="${wsdl-dir}/resolver">
				<include name="simple-resolver.xsd"/>
				<include name="simple-resolver.gwsdl"/>
			</srcfiles>
		</uptodate>
	</presetdef>

	<condition property="gen.simple-resolver.uptodate">
		<and>
			<common.source.files.uptodate
				targetfile="${codegen-dir}/wsdl/simple-resolver.flag"/>
			<naming.source.files.uptodate
				targetfile="${codegen-dir}/wsdl/simple-resolver.flag"/>
			<simple-resolver.source.files.uptodate
				targetfile="${codegen-dir}/wsdl/simple-resolver.flag"/>
		</and>
	</condition>

	<target name="gen.simple-resolver" unless="gen.simple-resolver.uptodate">
		<copy todir="${codegen-dir}/wsdl">
			<fileset refid="common.source.files"/>
			<fileset dir="${wsdl-dir}/resolver">
				<include name="simple-resolver.gwsdl"/>
				<include name="simple-resolver.xsd"/>
			</fileset>
		</copy>

		<echo message="Normalizing gwsdl."/>
		<genii-gwsdl-normalizer source="${codegen-dir}/wsdl/simple-resolver.gwsdl"
			target="${codegen-dir}/wsdl/simple-resolver-generated.wsdl"/>

		<echo message="Generating Service gwsdl."/>
		<genii-service-generator
			source="${codegen-dir}/wsdl/simple-resolver-generated.wsdl"
			target="${codegen-dir}/wsdl/simple-resolver-service.wsdl"
			portType="{http://vcgr.cs.virginia.edu/naming/2006/12/simple-resolver}SimpleResolverPortType"/>

		<antcall target="gen.stub-generation">
			<param name="stub.gen.target-dir" value="${codegen-dir}/simple-resolver"/>
			<param name="stub.gen.source-wsdl"
				value="file:///${codegen-dir}/wsdl/simple-resolver-service.wsdl"/>
			<param name="stub.gen.target-flag-file"
				value="${codegen-dir}/wsdl/simple-resolver.flag"/>
		</antcall>
		<move file="${codegen-dir}/simple-resolver/edu/virginia/vcgr/genii/resolver/simple/deploy.wsdd"
			tofile="${wsdd-dir}/simple-resolver.deploy.wsdd"/>
		<replace file="${wsdd-dir}/simple-resolver.deploy.wsdd"
			token="edu.virginia.vcgr.genii.resolver.simple.SimpleResolverSOAPBindingImpl"
			value="edu.virginia.vcgr.genii.container.resolver.SimpleResolverServiceImpl"
			summary="yes"/>
		<copy file="${wsdd-dir}/simple-resolver.deploy.wsdd"
			todir="${services.dir}"/>
	</target>

</project>

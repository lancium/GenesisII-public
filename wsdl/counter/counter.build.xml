<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="gen.counter" name="counter.build">

	<condition property="gen.counter.uptodate">
		<and>
			<common.source.files.uptodate
				targetfile="${codegen-dir}/wsdl/counter.flag"/>
			<uptodate targetfile="${codegen-dir}/wsdl/counter.flag"
				srcfile="${wsdl-dir}/counter/counter.gwsdl"/>
		</and>
	</condition>

	<target name="gen.counter" unless="gen.counter.uptodate">
		<copy todir="${codegen-dir}/wsdl">
			<fileset refid="common.source.files"/>
			<fileset dir="${wsdl-dir}/counter">
				<include name="counter.gwsdl"/>
			</fileset>
		</copy>

		<echo message="Normalizing gwsdl."/>
		<genii-gwsdl-normalizer source="${codegen-dir}/wsdl/counter.gwsdl"
			target="${codegen-dir}/wsdl/counter-generated.wsdl"/>

		<echo message="Generating Service gwsdl."/>
		<genii-service-generator
			source="${codegen-dir}/wsdl/counter-generated.wsdl"
			target="${codegen-dir}/wsdl/counter-service.wsdl"
			portType="{http://vcgr.cs.virginia.edu/counter/2006/06/counter}CounterPortType"/>

		<antcall target="gen.stub-generation">
			<param name="stub.gen.target-dir" value="${codegen-dir}/counter"/>
			<param name="stub.gen.source-wsdl"
				value="file:///${codegen-dir}/wsdl/counter-service.wsdl"/>
			<param name="stub.gen.target-flag-file"
				value="${codegen-dir}/wsdl/counter.flag"/>
		</antcall>
		<move file="${codegen-dir}/counter/edu/virginia/vcgr/genii/counter/deploy.wsdd"
			tofile="${wsdd-dir}/counter.deploy.wsdd"/>
		<replace file="${wsdd-dir}/counter.deploy.wsdd"
			token="edu.virginia.vcgr.genii.counter.CounterSOAPBindingImpl"
			value="edu.virginia.vcgr.genii.container.counter.CounterServiceImpl"
			summary="yes"/>
		<copy file="${wsdd-dir}/counter.deploy.wsdd"
			todir="${services.dir}"/>
	</target>

</project>
